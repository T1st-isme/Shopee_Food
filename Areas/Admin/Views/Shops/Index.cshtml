@model IEnumerable<Shopee_Food.Models.Shop>

@{
    ViewBag.Title = "Danh sách Shop";
    Layout = "~/Areas/Admin/Views/Shared/Admin_Layout.cshtml";
    int i = 0;
}

<p>
    <a href="/Admin/NhanViens/Create"
       class="btn btn-primary">Thêm Shop</a>
</p>
<div>
    <form>
        <select name="danhgia" value="@ViewBag.DanhGia">
            <option>Tất cả</option>
            @foreach (var item in new Shopee_Food.Areas.Admin.map.mapNhanVien().DanhSach())
            {
                <option value="@item.DanhGia" @Html.Raw(item.DanhGia == ViewBag.DanhGia ? "selected" : "")>@item.DanhGia</option>
            }
        </select>
        <input name="tukhoa" value="@ViewBag.TimKiem" />
        <button>
            Tìm kiếm
        </button>
    </form>
</div>

<div class="card-body">
    <table class="table table-bordered table-responsive-md table-striped">
        <thead style="color:cadetblue">
            <tr>
                <th width="50px" align="center">STT</th>
                <th width="100px" style="text-align:center">Mã shop</th>
                <th width="150px"> Tên shop</th>
                <th>Tình trạng</th>
                <th> Số lượng sản phẩm</th>
                <th width="200px"> Doanh thu</th>
                <th>Thao tác</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                i++;
                <tr>
                    <td align="center">@i</td>
                    <td align="center">
                        @("SHOP" + item.MaShop)
                    </td>
                    <td>
                        @item.TenShop
                    </td>
                    <td>
                        @item.TinhTrang
                    </td>
                    <td>
                        @item.SoLuongSanPham
                    </td>
                    <td>
                        @item.DoanhThu
                    </td>

                    <td>
                        <a class="btn btn-info btn-sm" href="/Admin/Shops/Edit/@item.MaShop">
                            <i class="fas fa-pencil-alt">
                            </i>
                            Sửa
                        </a>
                        <a class="btn btn-primary btn-sm" href="/Admin/Shops/Details/@item.MaShop">
                            <i class="fas fa-folder">
                            </i>
                            Chi tiết
                        </a>
                        <a class="btn btn-danger btn-sm" href="/Admin/Shops/Delete/@item.MaShop">
                            <i class="fas fa-trash">
                            </i>
                            Xóa
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>