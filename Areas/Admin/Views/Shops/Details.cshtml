@model Shopee_Food.Models.Shop

@{
    ViewBag.Title = "Chi tiết Shop";
    Layout = "~/Areas/Admin/Views/Shared/Admin_Layout.cshtml";
}

<div>
    <!-- Default box -->
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Thông tin nhân viên <b>@Model.TenShop</b></h3>

            <div class="card-tools">
                <button type="button" class="btn btn-tool" data-card-widget="collapse" title="Collapse">
                    <i class="fas fa-minus"></i>
                </button>
                <button type="button" class="btn btn-tool" data-card-widget="remove" title="Remove">
                    <i class="fas fa-times"></i>
                </button>
            </div>
        </div>
        <div class="card-body">
            <dl class="dl-horizontal" style="font-size: 20px">
                <dt>
                    Mã Shop
                </dt>

                <dd>
                    @("SHOP" + Model.MaShop)
                </dd>
                <dt>
                    Tên Shop
                </dt>

                <dd>
                    @Model.TenShop
                </dd>

                <dt>
                    Đánh giá
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.DanhGia)
                </dd>

                <dt>
                    Tình trạng
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.TinhTrang)
                </dd>

                <dt>
                    Số lượng sản phẩm
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.SoLuongSanPham)
                </dd>

                <dt>
                    Doanh thu
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.DoanhThu)
                </dd>

                <dt>
                    Ảnh bìa
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.AnhBia)
                </dd>

                <dt>
                    Ảnh đại diện
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.AnhDaiDien)
                </dd>

                <dt>
                    Ảnh thực tế
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.AnhThucTe)
                </dd>

                <dt>
                    Tài khoản
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Users.TaiKhoan)
                </dd>
                <dt>
                    Địa chỉ
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Users.DiaChi)
                </dd>
                <dt>
                    SĐT
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Users.SDT)
                </dd>
            </dl>
        </div>
        <!-- /.card-body -->
        @*<div class="card-footer">
                Footer
            </div>*@
        <!-- /.card-footer-->
    </div>
    <!-- /.card -->
</div>
<p>
    <a class="btn btn-info" href="/Admin/Shops/Edit/@Model.MaShop">
        <i class="fas fa-pencil-alt">
        </i>
        Sửa
    </a> |
    <a class="btn btn-secondary" href="/Admin/NhanViens/Index">
        <i class="fas fa-long-arrow-alt-left">
        </i>
        Quay về
    </a>
</p>