@model Shopee_Food.Models.NhanVien

@{
    ViewBag.Title = "Xóa nhân viên";
    Layout = "~/Areas/Admin/Views/Shared/Admin_Layout.cshtml";
}

<h3>Bạn có chắc muốn xóa nhân viên này không?</h3>
<div>
    <!-- Default box -->
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Thông tin nhân viên <b>@Model.User.HoTen</b></h3>

            <div class="card-tools">
                <button type="button" class="btn btn-tool" data-card-widget="collapse" title="Collapse">
                    <i class="fas fa-minus"></i>
                </button>
                <button type="button" class="btn btn-tool" data-card-widget="remove" title="Remove">
                    <i class="fas fa-times"></i>
                </button>
            </div>
        </div>
        <div class="card-body">
            <dl class="dl-horizontal" style="font-size: 20px">
                <dt>
                    Tài khoản

                <dd>
                    @Html.DisplayFor(model => model.User.TaiKhoan)
                </dd>
                <dt>
                    Đánh giá
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.DanhGia)
                </dd>
                <dt>
                    Họ tên
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.User.HoTen)
                </dd>
                <dt>
                    Đánh giá
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.DanhGia)
                </dd>
                <dt>
                    Chức vụ
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.User.ChucVu)
                </dd>
            </dl>
        </div>
    </div>
</div>
<!-- /.card-body -->
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="row">
        <div class="col">
            <a class="btn btn-secondary" href="/Admin/NhanViens">
                <i class="fas fa-long-arrow-alt-left">
                </i>
                Quay về
            </a> |
            <button type="submit" class="btn btn-danger" onclick="return confirm('Bạn có chắc muốn xóa nhân viên này không?')">
                <i class='fas fa-times'></i> Xóa
            </button>
        </div>
    </div>

}