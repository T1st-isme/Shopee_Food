        <th>
            @Html.DisplayNameFor(model => model.DanhGia)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.User.TaiKhoan)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
