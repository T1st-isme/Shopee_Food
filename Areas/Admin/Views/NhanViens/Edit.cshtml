@model Shopee_Food.Models.NhanVien

@{
    ViewBag.Title = "Sửa thông tin";
    Layout = "~/Areas/Admin/Views/Shared/Admin_Layout.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-md">
                <div class="card card-primary">
                    <div class="card-header">
                        <h3 class="card-title">Nhân viên <b>@Model.User.HoTen</b> </h3>

                        <div class="card-tools">
                            <button type="button" class="btn btn-tool" data-card-widget="collapse" title="Collapse">
                                <i class="fas fa-minus"></i>
                            </button>
                        </div>
                    </div>
                    <div class="card-body">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        @Html.HiddenFor(model => model.MaNV)
                        <div class="form-group">
                            <label>Tài khoản</label>

                            @Html.DropDownList("MaTK", null, htmlAttributes: new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.MaTK, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            <label for="inputDescription">Đánh giá</label>
                            @Html.EditorFor(model => model.DanhGia, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.DanhGia, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <!-- /.card-body -->
                </div>
                <!-- /.card -->
            </div>
        </div>

        <!-- /.content -->

        <div>
            <div class="row">
                <div class="col">
                    <a class="btn btn-secondary" href="/Admin/NhanViens">
                        <i class="fas fa-long-arrow-alt-left">
                        </i>
                        Quay về
                    </a>
                    <button type="submit" class="btn btn-success">
                        <i class="fas fa-save"></i> Lưu
                    </button>
                </div>
            </div>
        </div>
    </section>
}