@model Shopee_Food.Models.User

@{
    Layout = null;
}

<style>
    .hinh-dk {
        position: absolute;
        top: -60px;
    }

    .field-validation-error {
        color: red;
    }
</style>
@using (Html.BeginForm("RegisterUser", "Users_new", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <div class="login">
        <div class="form">
            <h2 style="color:white" style="position:relative; top: -40px;">ĐĂNG KÍ</h2>
            <div class="hinh-login">
            </div>

            <div class="place">
                <p>Nhập Tên Tài Khoản </p>
                @Html.EditorFor(model => model.TaiKhoan, new { htmlAttributes = new { placeholder = "Tài Khoản" } })
                @Html.ValidationMessageFor(model => model.TaiKhoan)
                @if (ViewBag.ErrorInfo != null)
                {
                    <p style="color:red">@ViewBag.ErrorInfo</p>
                }
            </div>
            <div class="place">
                <p>Nhập SĐT</p>
                @Html.EditorFor(model => model.SDT, new { htmlAttributes = new { placeholder = "Số Điện Thoại" } })
                @Html.ValidationMessageFor(model => model.SDT)
            </div>
            <div class="place">
                <p>Nhập Mật Khẩu</p>

                @Html.PasswordFor(model => model.MatKhau, new { placeholder = "Mật Khẩu" })
                @Html.ValidationMessageFor(model => model.MatKhau)
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.MaCV, "MaCV", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DropDownList("MaCV", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.MaCV, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        <input type="submit" value="Đăng Kí" class="submit" id="sub">
    </div>
    @section scripts {
        <script>
            $(document).ready(function () {
                // Ẩn dropdown list chọn chức vụ khi trang tải xong
                $("#MaCV").hide();
            });
        </script>
    }
}